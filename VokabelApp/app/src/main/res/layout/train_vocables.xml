<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.20"
        android:weightSum="1">

        <TextView
        android:id="@+id/txt_word"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:background="#BABABA"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="@string/txt_word"
            android:layout_weight="0.15" />

        </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.41">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_showTranslation"
            android:id="@+id/btn_showTranslation"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="63dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_next"
            android:id="@+id/btn_nextWord"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/btn_showTranslation" />

        </RelativeLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_mainMenu"
        android:id="@+id/btn_mainMenu"
        android:layout_marginTop="120dp"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
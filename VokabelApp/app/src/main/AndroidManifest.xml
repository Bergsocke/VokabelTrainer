<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bergsocke.vokabelapp" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".View.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".View.ShowAllVocables"
            android:theme="@android:style/Theme.Light"
            android:label="@string/btn_showAll"/>

        <activity android:name=".View.SelectBox"
            android:theme="@android:style/Theme.Light"
            android:label="@string/txt_selectBox" />

        <activity android:name=".View.TrainVocables"
            android:theme="@android:style/Theme.Light"
            android:label="@string/btn_train" />

        <activity android:name=".View.AddVocables"
            android:theme="@android:style/Theme.Light"
            android:label="@string/btn_add" />

        <activity android:name=".View.DeleteVocable"
            android:theme="@android:style/Theme.Light"
            android:label="@string/btn_delete" />

        <activity android:name=".View.EditVocable"
            android:theme="@android:style/Theme.Light"
            android:label="@string/btn_edit" />

    </application>

</manifest>
